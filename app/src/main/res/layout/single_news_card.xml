<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/top_and_bottom_margin"
    android:layout_marginEnd="@dimen/start_and_end_margin"
    android:layout_marginStart="@dimen/start_and_end_margin"
    android:layout_marginTop="@dimen/top_and_bottom_margin"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/universal_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_thumbnail_height"
            android:contentDescription="@string/news_thumbnail"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_news_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/news_heading"
            android:textColor="@color/news_heading_text_color"
            android:textSize="@dimen/news_heading_text_size" />

        <TextView
            android:id="@+id/txt_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/news_heading"
            android:textColor="@color/author_text_color"
            android:textSize="@dimen/author_name_text_size"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_publishing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/news_heading"
                android:textColor="@color/news_heading_text_color"
                android:textSize="@dimen/date_and_category_text_size" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/news_heading"
                android:textColor="@color/news_heading_text_color"
                android:textSize="@dimen/date_and_category_text_size" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>